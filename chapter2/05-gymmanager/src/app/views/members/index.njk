{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a href="/members/create" class="button new-instructor">Novo</a>
            <form action="/members" method="GET">
                <input type="text" name="filter" value="{{ filter }}" required autocomplete="off" placeholder="Nome ou email">
                <button type="submit">Filtrar</button>
            </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>Email</th>
                    <th>Altura</th>
                    <th>Peso</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td><span style="background-image: url({{ member.avatar_url }});"></span>{{ member.name }}</td>
                    <td>{{ member.email }}</td>
                    <td>{{ member.weight }} kg</td>
                    <td>{{ member.height }} cm</td>
                    <td><a href="/members/{{ member.id }}">Visualizar</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="pagination"
            data-page="{{ pagination.page }}"
            data-total="{{ pagination.total }}"
            data-filter="{{ filter }}"
        ></div>
    </div>
{% endblock content %}