{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create" class="button new-member">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>Email</th>
                    <th>Altura</th>
                    <th>Peso</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td><span style="background-image: url({{ member.avatar_url }});"></span>{{ member.name }}</td>
                    <td>{{ member.email }}</td>
                    <td>{{ member.weight }} kg</td>
                    <td>{{ member.height }} cm</td>
                    <td><a href="/members/{{ member.id }}">Visualizar</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}