<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ member.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Nome do Membro" value="{{ member.name }}">
    </div>
</div>
<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" placeholder="email@do.membro" value="{{ member.email }}">
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ member.birth }}">
    </div>
</div>
<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input type="radio" name="gender" id="g1" value="M" 
            {% if member.gender == 'M' %}checked{% endif %}>
            <label for="g1">Masculino</label>
            </span>
        <span><input type="radio" name="gender" id="g2" value="F"
        {% if member.gender == 'F' %}checked{% endif %}>
        <label for="g2">Feminino</label></span>
    </div>
</div>
<div class="item">
    <div>Tipo sanguíneo</div>
    <div>
        <select name="blood" id="blood">
            <option value="" selected disabled>Selecione uma opção</option>
            <option value="A1" 
                {% if member.blood == "A1" %}selected{% endif %}>A+
            </option>
            <option value="A0" 
                {% if member.blood == "A0" %}selected{% endif %}>A-
            </option>
            <option value="B1" 
                {% if member.blood == "B1" %}selected{% endif %}>B+
            </option>
            <option value="B0" 
                {% if member.blood == "B0" %}selected{% endif %}>B-
            </option>
            <option value="AB1" 
                {% if member.blood == "AB1"%}selected{% endif %}>AB+
            </option>
            <option value="AB0" 
                {% if member.blood == "AB0"%}selected{% endif %}>AB-
            </option>
            <option value="O1" 
                {% if member.blood == "O1" %}selected{% endif %}>O+
            </option>
            <option value="O0" 
                {% if member.blood == "O0" %}selected{% endif %}>O-
            </option>
        </select>
    </div>
</div>
<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input type="number" name="weight" value="{{ member.weight }}">
    </div>
</div>
<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input type="number" name="height" value="{{ member.height }}">
    </div>
</div>
<div class="item">
    <div>Instructor</div>
    <div>
        <select name="instructor" id="instructor">
            <option value="" selected disabled>Selecione uma opção</option>
            {% for instructor in instructors %}
            <option value="{{ instructor.id }}"
                {% if member.instructor_id == instructor.id %}selected{% endif %}>{{ instructor.name }}
            </option>
            {% endfor %}
        </select>
    </div>
</div>
<button type="submit">Salvar</button>