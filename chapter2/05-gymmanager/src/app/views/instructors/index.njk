{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/instructors/create" class="button new-instructor">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                <tr>
                    <td><span style="background-image: url({{ instructor.avatar_url }});"></span>{{ instructor.name }}</td>
                    <td>{{ instructor.services }}</td>
                    <td>{{ instructor.total_students }}</td>
                    <td><a href="/instructors/{{ instructor.id }}">Visualizar</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}