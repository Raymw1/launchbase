{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a href="/instructors/create" class="button new-instructor">Novo</a>
            <form action="/instructors" method="GET">
                <input type="text" name="filter" value="{{ filter }}" required autocomplete="off" placeholder="Nome ou atendimento">
                <button type="submit">Filtrar</button>
            </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                <tr>
                    <td><span style="background-image: url({{ instructor.avatar_url }});"></span>{{ instructor.name }}</td>
                    <td>{{ instructor.services }}</td>
                    <td>{{ instructor.total_students }}</td>
                    <td><a href="/instructors/{{ instructor.id }}">Visualizar</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}