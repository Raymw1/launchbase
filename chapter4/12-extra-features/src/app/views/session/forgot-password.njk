{% extends "layout.njk" %}
{% import 'parts/card.njk' as card %}

{% block content %}
    {% call card.render("Esqueceu a senha?", "password container form") %}
        <form action="/users/forgot-password" method="POST">
            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input type="email" name="email" value="{{ user.email }}" placeholder="Digite o email cadastrado" onblur="Validate.apply(this, 'isEmail');">
                    </div>
                </div>
            </div>
            <button type="submit" class="button">Recuperar senha</button>
        </form>
    {% endcall %}
{% endblock content %}