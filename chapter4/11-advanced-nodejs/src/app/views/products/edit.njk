{% extends "layout.njk" %}
{% import 'parts/card.njk' as card %}

{% block content %}
    {% call card.render("Editar produto", "container form") %}
        <form action="/products?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="fields">
                {% include 'products/fields.njk' %}
                <input type="hidden" name="id" value="{{ product.id }}">
            </div>
            <button class="button edit" type="submit" class="button" onclick="Validate.allFields(event);">Atualizar</button>
        </form>
        <form id="form-delete" action="/products?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{ product.id }}">
            <button class="button delete" type="submit" class="button">Deletar</button>
        </form>
    {% endcall %}
    <script src="/scripts/confirmDelete.js"></script>
{% endblock content %}
