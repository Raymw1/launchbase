{% extends "layout.njk" %}
{% import 'parts/card.njk' as card %}

{% block content %}
    {% call card.render("Entrar", "login container form") %}
        <form action="/users/login" method="POST">
            <div class="fields">
                {% include 'session/fields.njk' %}
            </div>
            <button type="submit" class="button">Entrar</button>
            <div class="footer">
              <ul>
                <li><a href="/users/register">Registre-se</a></li>
                <li><a href="/users/forgot-password">Esqueci a senha</a></li>
              </ul>
            </div>
        </form>
    {% endcall %}
{% endblock content %}