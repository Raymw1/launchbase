{% extends 'layout.njk' %}
{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>RocketSeat</title>
{% endblock head %}
{% block content %}

    <main>
        <div class="wrapper">
            <h1>Conteúdos</h1>
        </div>
        <div class="cards">
            <div class="card" id="mapas-com-react-usando-leaflet">
                <div class="card-image-container">
                    <img src="https://blog.rocketseat.com.br/content/images/2020/11/blog-thumb-utilizando-mapas-no-react-com-leaflet-1.jpg" alt="Mapas com React usando Leaflet">
                    <div class="card-title">
                        <p>Mapas com React usando Leaflet</p>
                    </div>
                    <div class="card-description">
                        <p>Thiago Marinho</p>
                        <p class="card-reading-time">11 min</p>
                    </div>
                </div>
            </div>
            <div class="card" id="terminal-com-oh-my-zsh-spaceship-dracula-e-mais">
                <div class="card-image-container">
                    <img src="https://blog.rocketseat.com.br/content/images/2019/05/Painel.png" alt="Terminal com Oh My Zsh, Spaceship, Dracula e mais">
                    <div class="card-title">
                        <p>Terminal com Oh My Zsh, Spaceship, Dracula e mais</p>
                    </div>
                    <div class="card-description">
                        <p>Diego Fernandes</p>
                        <p class="card-reading-time">4 min</p>
                    </div>
                </div>
            </div>
            <div class="card" id="dark-mode-com-css-mudando-a-aparencia-do-blog-de-maneira-simples-e-rapida">
                <div class="card-image-container">
                    <img src="https://blog.rocketseat.com.br/content/images/2020/10/dark-mode-com-css-mudando-a-aparencia-do-blog-de-maneira-simples-e-rapida.jpg" alt="Dark Mode com CSS — mudando a aparência do Blog de maneira simples e rápida">
                    <div class="card-title">
                        <p>Dark Mode com CSS — mudando a aparência do Blog de maneira simples e rápida</p>
                    </div>
                    <div class="card-description">
                        <p>Thiago Marinho</p>
                        <p class="card-reading-time">3 min</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <div class="modal-overlay">
        <div class="modal">
            <div class="icons">
                <!-- minimize -->
                <a class="max-modal"><i class="material-icons">open_in_full</i></a>
                <a class="close-modal"><i class="material-icons">close</i></a>
            </div>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            <div class="modal-content">
        </div>
    </div>
    <script src="scripts/script.js"></script>
{% endblock content %}

