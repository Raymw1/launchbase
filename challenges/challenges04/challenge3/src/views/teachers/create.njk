{% extends 'layout.njk' %}
{% block content %}
    <form action="/teachers" method="POST" class="card">
        <section class="avatar"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>
            <div class="item">
                <div>Professor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do professor">
                </div>
            </div>
            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="degree" id="degree">
                        <option value="" selected disabled>Selecione o grau de escolaridade</option>
                        <option value="highschool">Ensino Médio Completo</option>
                        <option value="college">Ensino Superior Completo</option>
                        <option value="master">Mestrado</option>
                        <option value="doctor">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <label><span><input type="radio" name="classtype" value="presential" checked>Presencial</span></label>
                    <label><span><input type="radio" name="classtype" value="remote">À distância</span></label>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe os serviçoes prestados por vírgula">
                </div>
            </div>
            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}