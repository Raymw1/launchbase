<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Professor</div>
    <div>
        <input type="text" name="name" placeholder="Nome do professor" value="{{ teacher.name }}">
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth_date" value="{{ teacher.birth_date }}">
    </div>
</div>
<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level" id="education_level">
            <option value="" selected disabled>Selecione o grau de escolaridade</option>
            {% for education_level, dvalue in education_levels %}
            <option value="{{ education_level }}" {% if education_level == teacher.education_level %}selected{% endif %} >{{ dvalue }}</option>
            {% endfor %}
        </select>
    </div>
</div>
<div class="item">
    <div>Tipo de aula</div>
    <div>
        <label><span><input type="radio" name="class_type" value="presential" {% if teacher.class_type == 'presential' %}checked{% endif %}>Presencial</span></label>
        <label><span><input type="radio" name="class_type" value="remote" {% if teacher.class_type == 'remote' %}checked{% endif %}>À distância</span></label>
    </div>
</div>
<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="subjects_taught" value="{{ teacher.subjects_taught }}" placeholder="Separe os serviçoes prestados por vírgula">
    </div>
</div>