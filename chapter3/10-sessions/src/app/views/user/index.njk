{% extends "layout.njk" %}

{% block content %}
    <section class="container form user-dashboard">
        <form action="/users?_method=PUT" method="POST">
            <div class="header">
                <h3>Detalhes</h3>
            </div>
            <div class="fields">
                {% include 'user/fields.njk' %}
                <input type="hidden" name="id" value="{{ user.id }}">
            </div>
            <button class="button edit" type="submit" class="button">Atualizar</button>
        </form>
        <form id="form-delete" action="/users?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{ user.id }}">
            <button class="button delete" type="submit" class="button">Deletar</button>
        </form>
    </section>
    </section>
    <script src="/scripts/confirmDelete.js"></script>
{% endblock content %}