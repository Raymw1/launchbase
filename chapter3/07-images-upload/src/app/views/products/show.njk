{% extends "layout.njk" %}

{% block content %}
    <section class="container product-single">
      <div class="gallery">
        <img src="{{ files[0].src }}" alt="{{ files[0].name }}">
      </div>
      <div class="info">
        <h1>{{ product.name }}</h1>
        <div class="published">Publicado em {{ product.published.day }} {{ product.published.hour }}</div>
        <div class="description">{{ product.description }}</div>
        <div class="price-buy">
          <div class="price">
            {{ product.price }}
            {% if product.old_price > product.price %}
            <span class="old">{{ product.old_price }}</span>
            {% endif %}
          </div>
          <div class="buy">
            {% if product.status == 0 %}
            <p class="unavailable">Indispon√≠vel</p>
            {% elseif product.quantity == 0 %}
            <p class="unavailable">Fora de estoque</p>
            {% else %}
            <button class="button">Comprar</button>
            {% endif %}
          </div>
        </div>
      </div>
    </section>
{% endblock content %}